<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.faraway.domain.hotplace.repository.FileInfoRepository">
    <insert id="save" parameterType="java.util.List">
        insert into file_info (hotplace_id, save_folder, original_file, save_file)
        values
            <foreach collection="java.util.List" item="file" separator=" , ">
                (select last_insert_id(), #{file.saveFolder}, #{file.originalFile}, #{file.saveFile})
            </foreach>
    </insert>

    <select id="findAllFileInfoByHotPlaceId" parameterType="long" resultType="FileInfoListResponseDto">
        select id, save_folder, original_file, save_file
        from file_info
        where hotplace_id = #{hotPlaceId}
    </select>

    <delete id="delete" parameterType="long">
        delete from file_info
        where id = #{id}
    </delete>

    <delete id="deleteFileInfoByHotPlaceId" parameterType="long">
        delete from file_info
        where hotplace_id = #{hotPlaceId}
    </delete>
</mapper>