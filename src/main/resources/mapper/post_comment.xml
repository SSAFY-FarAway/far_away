<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.faraway.domain.post.repository.PostCommentRepository">
    <insert id="save" parameterType="PostCommentSaveRequestDto">
        insert into post_comment (post_id, member_id, content)
        values (#{postId}, #{memberId}, #{content})
    </insert>
</mapper>